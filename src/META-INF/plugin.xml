<idea-plugin version="2">
  <name>CTAP idea plugin</name>
  <description>idea plugin for hsenid mobile solutions,cloud telco application platform - A.K.A :- CTAP</description>
  <version>1.0</version>
  <vendor>hms</vendor>
    <!--
    <idea-version since-build="8000"/>
    -->
  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
     
  </project-components>

  <actions>
      <group id="CTAP.NewActions">
          <separator/>
          <action id="NewUssd" class="hms.ctap.idea.plugin.action.NewServiceClassAction"/>
          <add-to-group anchor="after" group-id="NewGroup" relative-to-action="NewFromTemplate"/>
      </group>


      <group id="Tap.Http.Clients" class="com.intellij.openapi.actionSystem.DefaultActionGroup">
          <separator/>
          <action id="lbsClient" class="hms.ctap.idea.plugin.action.snippet.LbsFieldGeneratorAction"></action>
          <action id="smsClient" class="hms.ctap.idea.plugin.action.snippet.SmsFieldGeneratorAction"></action>
          <add-to-group group-id="GenerateGroup" anchor="last"/>
      </group>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->                       
     <toolWindow id="CTAP simulator"  secondary="true" icon="/general/add.png" anchor="right" factoryClass="hms.ctap.idea.plugin.ui.CtapSimulatorWindowFactory"/>
     <projectTemplate projectType="CTAP Application" templatePath="resources/CTAP_SMS_Service_Application.zip" category="true"/>
     <projectTemplate projectType="CTAP Application" templatePath="resources/CTAP_USSD_Service_Application.zip" category="true"/>
     <configurationType implementation="hms.ctap.idea.plugin.runner.conf.CtapRunnerConfigurationType" />
     <programRunner id="Run" implementation="hms.ctap.idea.plugin.runner.runner.CtapProgramRunner" order="first"/>
     <programRunner id="Debug" implementation="hms.ctap.idea.plugin.runner.runner.CtapProgramDebugger" order="last" />
  </extensions>
</idea-plugin>
